<h1>Bright Ideas!</h1>
<div id="wrapper">
	<div class="reg">
	<h2>Register</h2>
	<% if flash[:errors] %>
		<% flash[:errors].each do |error| %>
			<p class="red"><%= error %></p>
		<% end %>
	<% end %>
	<% if flash[:success] %>
		<p><%= flash[:success] %></p>
	<% end %>
	<%= form_for @user do |elem| %>

	<div class="field">
		<%= elem.label :first_name %><br />
		<%= elem.text_field :first_name %>
	</div>
	<br />
	<div class="field">
		<%= elem.label :last_name %><br />
		<%= elem.text_field :last_name %>
	</div>
	<br />
	<div class="field">
		<%= elem.label :email %><br />
		<%= elem.text_field :email %>
	</div>
	<br />
	<p>*Password should be at least 8 characters</p>
	<div class="field">
		<%= elem.label :password %><br />
		<%= elem.password_field :password %>
	</div>
	<br />
	<div class="field">
		<%= elem.label "Confirm Password" %><br />
		<%= elem.password_field :password_confirmation %>
	</div>
	<br />
	<div class="actions">
	    <%= elem.submit "Register" %>
	 </div>

	<% end %>
	</div>

	<div class="log">
	<h2>Log In</h2>
	<%= flash[:error] %>
	<%= form_for( :session, :url => sessions_create_path ) do |elem| %>
	  <div class="field">
	    <%= elem.label :email %><br />
	    <%= elem.email_field :email %>
	  </div>
	  <br />
	  <div class="field">
	    <%= elem.label :password %><br />
	    <%= elem.password_field :password, autocomplete: "off" %>
	  </div>
	  <br />
	  <div class="actions">
	    <%= elem.submit "Log in" %>
	  </div>
	<% end %>

	</div>
</div>